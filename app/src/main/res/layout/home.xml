<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/home" >

        <Button
            android:id="@+id/imageCara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tombolcara"
            android:layout_marginRight="144dp"
            android:layout_marginEnd="144dp"
            android:layout_alignTop="@+id/imagePlay"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="66dp" />

        <Button
            android:id="@+id/imagePlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tombolplay"
            android:layout_marginBottom="52dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/imageCara"
            android:layout_alignStart="@+id/imageCara" />

</RelativeLayout>